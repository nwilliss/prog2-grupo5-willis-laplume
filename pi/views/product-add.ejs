<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%- include('partials/head') %>

<body>
	<!-- Header -->

	<%-include('partials/header')%>

	<!-- /Header -->

	<!-- Banner -->
	<div class="banner">
		<img src="/images/banner.jpeg" alt="Banner de ofertas">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Agregar productos</h2>
			</div>
			
	<form action='/product-add' method='post' class="form col-12 col-lg-8">
		<div class='form-group'>
			<label class="form-label" for='pic'>Foto del producto</label>
			<input 
				type='text' 
				class='form-input' 
				name='imagen'
				placeholder="Ingrese la URL de la imagen">
			<% for (let i = 0; i < errores.length; i++) { %>
				<% if (errores[i].path === "imagen") { %>
					<label class="form-label text-danger font-weight-bold"><%= errores[i].msg %></label>
				<% } %>
			<% } %>
		</div>
		<div class="form-group">
			<label class="form-label" for="name">Nombre del producto</label>
			<input 
				type="text" 
				class="form-input" 
				name="nombre" 
				placeholder="Ingrese el nombre del producto">
			<% for (let i = 0; i < errores.length; i++) { %>
				<% if (errores[i].path === "nombre") { %>
					<label class="form-label text-danger font-weight-bold"><%= errores[i].msg %></label>
				<% } %>
			<% } %>
		</div>
		<div class="form-group	">
			<label class="form-label" for="description">Descripción</label>
			<textarea 
				class="form-input" 
				name="descripcion" 
				placeholder="Ingrese la descripción del producto"></textarea>
			<% for (let i = 0; i < errores.length; i++) { %>
				<% if (errores[i].path === "descripcion") { %>
					<label class="form-label text-danger font-weight-bold"><%= errores[i].msg %></label>
				<% } %>
			<% } %>
		</div>
		<button type="submit" class="buy-now-button">Agregar producto</button>
	</form>

		</div>
	</div>



	<!-- footer -->

	<%- include('partials/footer')%>

	<!-- /footer -->
</body>

</html>