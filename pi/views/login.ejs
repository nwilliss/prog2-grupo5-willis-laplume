<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%- include('partials/head') %>

<body>
	<!-- Header -->

	<%-include('partials/header')%>

	<!-- /Header -->

	<!-- Banner -->
		<div class="banner">
			<img src="/images/banner.jpeg" alt="Banner de ofertas">
		</div>
	<!-- /Banner -->



	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Ingresar</h2>
			</div>
	

			<form action="/login" method="post" class="col-12 col-md-6">
				<div class="form-group">
					<label class="form-label" for="email">Email</label>
					<input type="text" name="email" class="form-input">
					<% for (let i = 0; i < errores.length; i++) { %>
						<% if (errores[i].path === "email") { %>
							<label class="form-label text-danger font-weight-bold"><%= errores[i].msg %></label>
						<% } %>
					<% } %>
				</div>
				<div class="form-group">
					<label class="form-label" for="password">Contrase√±a</label>
					<input type="password" name="contrasenia" class="form-input">
					<% for (let i = 0; i < errores.length; i++) { %>
							<% if (errores[i].path === "contrasenia") { %>
								<label class="form-label text-danger font-weight-bold"><%= errores[i].msg %></label>
							<% } %>
						<% } %>
				</div>
				<div class="form-group">
					<label class="form-label" for="remember">Recordarme</label>
					<input type="checkbox" name="remember" class="form-label">
				</div>

				<button type="submit" class="buy-now-button">Ingresar</button>
			</form>


		</div>
	</div>
	<!-- footer -->

	<%-include('partials/footer')%>

	<!-- /footer -->
</body>

</html>